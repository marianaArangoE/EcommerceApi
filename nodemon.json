{
  "watch": ["src"],
  "ext": "ts,json",
  "ignore": [
    "dist/**",
    "node_modules/**",
    ".git/**",
    ".eslintcache",
    "*.log",
    ".env",
    ".env.*"
  ],
  "exec": "node -r ts-node/register -r tsconfig-paths/register src/server.ts",
  "signal": "SIGTERM",
  "delay": "200ms",
  "env": { "NODE_ENV": "development" }
}
